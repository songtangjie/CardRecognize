<!--pages/recognize/recognize.wxml-->
<s-tool-bar icon="/assets/add.png" 
            title="选择{{categories[type]}}" 
            my-class="tool-bar"
            bindtap="selectClick"/>


<s-tool-bar icon="/assets/save.png" 
            title="保存信息" 
            my-class="tool-bar"
            bgColor="#efb336"
            bindtap="saveClick"/>

<s-tool-bar icon="/assets/copy.png" 
            title="复制信息" 
            my-class="tool-bar"
            bgColor="#d34b2c"
            bindtap="copyClick"/>

<block wx:if="{{idInfo}}">
  <s-header title="身份证信息"/>
  <view class="id-info">
   <view>姓名: {{idInfo.name}}</view>
   <image src="{{idInfo.fileID}}"/>
  </view>
</block>
